@model AppointmentScheduler.Models.ViewModels.LoginModel

<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="login" asp-controller="Account">
                <h2>Use your Email and password to Login</h2>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2 checkbox">
                        <label asp-for="RememberMe"></label>
                        <input asp-for="RememberMe" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="log in" class="btn btn-success" />
                        <a class="btn btn-secondary" asp-action="Register">Register</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_validationscriptspartial" />
    }
}